<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="DefaultFortniteIcon.jpg" />
    <None Remove="DefaultFortniteIcon.png" />
    <None Remove="FNLauncher_Icon.ico" />
    <None Remove="logopepega.ico" />
    <None Remove="logopepega.png" />
    <None Remove="Pages\Truck1.10.png" />
    <None Remove="Windows\FNLauncher_Icon.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WPF-UI" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="DefaultFortniteIcon.jpg" />
    <Resource Include="FNLauncher_Icon.ico" />
    <Resource Include="logopepega.ico" />
    <Resource Include="logopepega.png" />
    <Resource Include="Pages\Truck1.10.png" />
    <Resource Include="Windows\FNLauncher_Icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="LauncherData\" />
    <Folder Include="Settings\" />
  </ItemGroup>

	<ItemGroup>
		<Content Include="LauncherData\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
