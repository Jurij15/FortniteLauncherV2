<ui:UiWindow x:Class="Platinum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platinum"
        xmlns:pages="clr-namespace:Platinum.Pages"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
             Closing="UiWindow_Closing"
        Title="Platinum Launcher" Height="857" Width="1422"
                          Background="{ui:ThemeResource ApplicationBackgroundBrush}"
             ExtendsContentIntoTitleBar="True"
             WindowStartupLocation="CenterScreen"
                              WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar 
            Title="Platinum Launcher"
            Grid.Row="1"
            />
        <ui:NavigationStore
            x:Name="MainWindowNavStore"
            Grid.Row="2"
            HorizontalAlignment="Left"
            TransitionType="FadeInWithSlide"
            Precache="False"
            TransitionDuration="195"
            SelectedPageIndex="0"
            Frame="{Binding ElementName=RootFrame}"
            >
            <ui:NavigationStore.Items>
                <ui:NavigationItem
                    Content="Home"
                    Icon="Home20"
                    PageType="{x:Type pages:HomePage}"
                    PageTag="HomePage"/>
                <ui:NavigationSeparator/>
                <ui:NavigationItem
                    Content="Play"
                    Icon="Play20"
                    PageType="{x:Type pages:PlayPage}"
                    PageTag="PlayPage"/>
                <ui:NavigationItem 
                    Content="Builds"
                    Icon="Box20"
                    PageType="{x:Type pages:BuildsPage}"
                    PageTag="BuildsTab"/>
                <ui:NavigationItem
                    Content="Server"
                    Icon="Server20"
                    FontSize="14"
                    PageType="{x:Type pages:ServerPage}"
                    PageTag="ServerTab"/>
                <ui:NavigationItem
                    Content="GameServer"
                    Icon="Games20"
                    FontSize="14"
                    PageType="{x:Type pages:GameServerPage}"
                    PageTag="InGameTab"/>
                <ui:NavigationItem
                    Content="Inject"
                    Icon="PlugConnected20"
                    PageType="{x:Type pages:InjectPage}"
                    PageTag="InjectPage"/>
            </ui:NavigationStore.Items>
            <ui:NavigationStore.Footer>
                <ui:NavigationItem
                    Content="Settings"
                    Icon="Settings20"
                    PageTag="SettingsPage"/>
                <ui:NavigationItem
                    Content="About"
                    Icon="ContactCard20"
                    PageTag="AboutTab"/>
                <ui:NavigationSeparator/>
                <ui:NavigationItem
                    x:Name="ThemeButtonNavigation"
                    Content="Theme"
                    Icon="DarkTheme20"
                    Click="ThemeButtonNavigation_Click"/>
            </ui:NavigationStore.Footer>
        </ui:NavigationStore>
        <Border Grid.Row="2" Background="Transparent" Margin="70,2,2,2">
            <Frame x:Name="RootFrame" Grid.Row="2" Margin="0,0,0,0"/>
        </Border>
    </Grid>
</ui:UiWindow>
